  "projections": [
    {
      "name": "projection",
      "scale": 225,
      "type": "orthographic",
      "translate": {
        "signal": "[width/2, height/2]"
      },
      "rotate": [
        {
          "signal": "rotate0"
        },
        {
          "signal": "rotate1"
        },
        0
      ]
    }
  ],
  "scales": [
    {
      "name": "size",
      "type": "sqrt",
      "domain": [
        0,
        1050
      ],
      "range": [
        0,
        {
          "signal": "quakeSize"
        }
      ]
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {
        "data": "sphere"
      },
      "encode": {
        "update": {
          "fill": {
            "value": "aliceblue"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 1.5
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    },
    {
      "type": "shape",
      "from": {
        "data": "world"
      },
      "encode": {
        "update": {
          "fill": {
            "value": "mintcream"
          },
          "stroke": {
            "value": "black"
          },
          "strokeWidth": {
            "value": 0.35
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    },
    {
      "type": "shape",
      "from": {
        "data": "foodvalue"
      },
      "encode": {
        "update": {
          "opacity": {
            "value": 0.25
          },
          "fill": {
            "value": "red"
          },
          "tooltip": {
            "signal": "{'Country': datum.properties.country, 'Value': datum.properties.value, 'Category': 'Cocoa'}"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection",
          "pointRadius": {
            "expr": "scale('size', datum.properties.value)"
          }
        }
      ]
    }
  ]
